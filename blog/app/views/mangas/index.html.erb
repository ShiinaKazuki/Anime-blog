<h1>Listing mangas</h1>

<%= link_to 'New manga', new_manga_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

<% @mangas.each do |manga| %>
  <tr>
    <td><%= manga.title %></td>
    <td><%= manga.text %></td>
    <td><%= link_to 'Show', manga_path(manga) %></td>
    <td><%= link_to 'Edit', edit_manga_path(manga) %></td>
    <td><%= link_to 'Destroy', manga_path(manga),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

